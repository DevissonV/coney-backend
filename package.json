{
  "name": "coney-backend",
  "version": "1.0.0",
  "description": "Backend for Coney project",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "cross-env node src/server.js",
    "dev": "nodemon src/server.js",
